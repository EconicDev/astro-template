---
import StaffCard from "./StaffCard.astro";
const img =
    "https://images.unsplash.com/photo-1517365830460-955ce3ccd263?ixlib=rb-=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=8&w=1024&h=1024&q=80";
const staffList = [
    {
        prefix: "Lic.",
        name: "Alejando Encarnación",
        title: "Presidente / Gerente Administativo",
        other: "Vice presidente de la Asociación Dominicana de Agentes de Aduanas",
        image: img,
    },
    {
        prefix: "Sra.",
        name: "María Isabel Bueno",
        title: "Directora de Comercio Exterior",
        image: img,
    },
    {
        prefix: "Lic.",
        name: "Nancy Encarnación",
        title: "Analista Senior",
        image: img,
    },
    {
        prefix: "Lic.",
        name: "Lucia Encarnación",
        title: "Analista de Comercio Exterior",
        image: img,
    },
    {
        prefix: "Sr.",
        name: "Víctor Encarnación",
        title: "Encargado de Operaciones en Puerto",
        image: img,
    },
    {
        prefix: "Lic.",
        name: "Junior Encarnación",
        title: "Supervisor de Operaciones en Puerto",
        image: img,
    },
    {
        prefix: "Sr.",
        name: "Samuel de la Rosa",
        title: "Auxiliar en Operaciones en Puerto",
        image: img,
    },
    {
        prefix: "Sr.",
        name: "Joel Montero",
        title: "Auxiliar en Operaciones en Puerto",
        image: img,
    },
];

const { title } = Astro.props;
---

<div class="max-w-7xl py-12 text-left lg:py-24">
    <div class="space-y-12">
        <div class="space-y-5 sm:max-w-xl sm:space-y-4 lg:max-w-5xl">
            <h2
                class="text-2xl -mb-2 sm:-mb-0 lg:text-3xl font-bold tracking-tight sm:text-4xl text-dodger-blue-500"
            >
                {title}
            </h2>
            <p class="text-xl text-gray-500"></p>
        </div>
        <ul
            role="list"
            class="space-y-8 sm:grid sm:grid-cols-2 sm:gap-12 sm:space-y-0 lg:max-w-5xl lg:grid-cols-3"
        >
            {staffList.map((staff) => <StaffCard {...staff} />)}
        </ul>
    </div>
</div>
