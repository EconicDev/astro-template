---
const { alternative, title, description, icon, href, linkText } = Astro.props;
---

<div class="flex items-center">
    <dt>
        <div
            class={`flex h-12 w-12 items-center justify-center rounded-md ${
                alternative ? "bg-fulvous-100" : "bg-dodger-blue-500"
            }`}
        >
            <img class="h-6 w-6" src={icon} />
        </div>
        {
            title && (
                <p class="ml-16 text-lg font-medium leading-6 text-gray-900">
                    {title}
                </p>
            )
        }
    </dt>
    <dd class="mt-2 ml-6 text-base text-left text-gray-500">
        {description}
    </dd>
</div>
