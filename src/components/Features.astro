---
import i18next, { t, changeLanguage, setDefaultNamespace } from "i18next";
import FeatureCard from "./FeatureCard.astro";

const features = [
    {
        title: "Asesoría",
        icon: "/assets/check.svg",
    },
    {
        title: "Gestiones",
        icon: "/assets/check.svg",
    },
    {
        title: "Trámites",
        icon: "/assets/check.svg",
    },
];
setDefaultNamespace("common");
changeLanguage(i18next.language);
---

<!-- https://images.unsplash.com/photo-1613690399151-65ea69478674?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1173&q=80 --><!-- &sat=-100 -->
<div class="relative bg-white py-16 sm:py-24 lg:py-16">
    <div class="mx-auto max-w-7xl sm:px-6 lg:px-8">
        <div class="shadow-xl sm:overflow-hidden sm:rounded-2xl">
            <div class="absolute inset-0">
                <img
                    class="h-full w-full object-cover"
                    src="https://images.unsplash.com/photo-1613690399151-65ea69478674?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=2830&q=80"
                    alt="People working on laptops"
                />
                <!-- <div> -->
                <!-- class="absolute inset-0 bg-gradient-to-r from-dodger-blue-200 to-fulvous-100 mix-blend-multiply" -->
                <!-- </div> -->
            </div>
        </div>
    </div>
    <div
        class="relative mx-auto max-w-md px-4 text-center sm:max-w-3xl sm:px-6 lg:max-w-7xl lg:px-8"
    >
        <!-- <h2 class="text-lg font-semibold text-fulvous-600">
            {t("features.slogan")}
        </h2> -->
        <p
            class="mt-2 text-3xl text-white font-semibold tracking-tight sm:text-4xl lg:px-32 lg:mx-32"
        >
            <!-- text-gray-900 -->
            Ofrecemos un servicio eficiente en del marco del comercio seguro
        </p>

        <div class="mt-16 mb-20">
            <div class="grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-3">
                {features.map((feature) => <FeatureCard {...feature} />)}
            </div>
        </div>
        <!-- <p class="mx-auto max-w-prose text-2xl text-white">
             -->
        <button
            type="button"
            class="inline-flex items-center rounded border border-dodger-blue-300 bg-dodger-blue-600 px-2.5 py-1.5 text-2xl font-medium text-white shadow-sm hover:bg-dodger-blue-700 focus:outline-dodger-blue-900 focus:ring-dodger-blue-500 focus:ring-2 focus:ring-offset-2"
        >
            Conoce nuestros servicios y asesorías
        </button>
        <!-- </p> -->
    </div>
</div>
