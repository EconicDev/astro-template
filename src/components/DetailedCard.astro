---
interface Props {
    title: string;
    descriptionList: string[];
}
const { title, descriptionList } = Astro.props;
---

<div class="flex flex-col overflow-hidden rounded-lg shadow-lg">
    <div class="flex flex-1 flex-col justify-between bg-white p-6">
        <div class="flex-1">
            <div class="mt-2 block">
                <p class="text-xl font-semibold border-b-2 pb-1 text-gray-900">
                    {title}
                </p>
                {
                    descriptionList &&
                        descriptionList.map((description, i) => {
                            if (i % 2 === 0) {
                                return (
                                    <p class="mt-3 text-base font-semibold text-gray-600">
                                        {description}
                                    </p>
                                );
                            }
                            return (
                                <p class="mt-3 text-base text-gray-500">
                                    {description}
                                </p>
                            );
                        })
                }
            </div>
        </div>
    </div>
</div>
