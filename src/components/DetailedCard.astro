---
interface Props {
    title: string;
    descriptionList: string[];
}
const { title, descriptionList } = Astro.props;
---

<div class="flex flex-col overflow-hidden rounded-lg shadow-lg">
    <div class="flex flex-1 flex-col justify-between bg-white p-6">
        <div class="flex-1">
            <div class="mt-2 block">
                <p
                    class="text-xl font-semibold border-b-2 border-fulvous-100 pb-1 text-dodger-blue-500"
                >
                    {title}
                </p>
                <ul>
                    {
                        descriptionList &&
                            descriptionList.map((description, i) => {
                                if (i % 2 === 0) {
                                    return (
                                        <li class="list-disc mt-3 text-base font-semibold text-gray-500">
                                            {description}
                                        </li>
                                    );
                                }
                                return (
                                    <li class="mt-3 text-base text-gray-500">
                                        {description}
                                    </li>
                                );
                            })
                    }
                </ul>
            </div>
        </div>
    </div>
</div>
